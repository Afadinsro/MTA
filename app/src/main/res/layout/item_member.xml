<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llv_member_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_height"
    android:gravity="fill_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_member"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_height"
        app:cardBackgroundColor="@color/cardview_light_background">

        <RelativeLayout
            android:id="@+id/rl_cardview_member"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/img_member_pic"
                android:layout_width="@dimen/img_member_width"
                android:layout_height="match_parent"
                android:contentDescription="@string/img_content_description"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_person" />

            <TextView
                android:id="@+id/txt_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/img_member_pic"
                android:text="@string/txt_member_name"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_member_ministry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_member_name"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/img_member_pic"
                android:text="@string/txt_ministry"
                android:textSize="12sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
